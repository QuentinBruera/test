<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Style pour le conteneur HT -->
    <Style x:Key="PriceIndicatorHtBorderStyle" TargetType="Border">
        <Setter Property="Background" Value="{DynamicResource HeaderColor}" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="Margin" Value="5" />
        <Setter Property="Padding" Value="10,5" />
        <Setter Property="BorderThickness" Value="1" />
    </Style>

    <!-- Style pour le conteneur TVA -->
    <Style x:Key="PriceIndicatorTvaBorderStyle" TargetType="Border">
        <Setter Property="Background" Value="{DynamicResource TvaColor}" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="Margin" Value="5" />
        <Setter Property="Padding" Value="10,5" />
        <Setter Property="BorderThickness" Value="1" />
    </Style>

    <!-- Style pour le conteneur TTC -->
    <Style x:Key="PriceIndicatorTtcBorderStyle" TargetType="Border">
        <Setter Property="Background" Value="{DynamicResource TtcColor}" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="Margin" Value="5" />
        <Setter Property="Padding" Value="10,5" />
        <Setter Property="BorderThickness" Value="1" />
    </Style>

    <!-- Style pour la valeur (montant) -->
    <Style x:Key="PriceIndicatorValueStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="28" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Foreground" Value="#000000" />
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>

    <!-- Style pour le libellé (Total HT, TVA, Total TTC) -->
    <Style x:Key="PriceIndicatorLabelStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="Foreground" Value="#000000" />
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>
</ResourceDictionary>
