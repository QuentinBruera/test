<UserControl x:Class="Negosud.Views.Articles.EditArticleView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Negosud.Views.Articles"
             xmlns:components="clr-namespace:Negosud.Components"
             mc:Ignorable="d" 
             d:DesignHeight="1080" d:DesignWidth="1920">
    <Grid Margin="20">
        <Grid HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="20,20,20,0">
            <StackPanel Orientation="Horizontal" Grid.Column="0" VerticalAlignment="Center">
                <components:ArrowBack NavigateBackCommand="{Binding DataContext.NavigateBackCommand, RelativeSource={RelativeSource AncestorType=Window}}" />
            </StackPanel>
        </Grid>
        <TextBlock Text="Edit Article View" FontSize="24" VerticalAlignment="Center" HorizontalAlignment="Center" />
    </Grid>
</UserControl>
