<UserControl x:Class="Negosud.Components.ButtonAdd"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Negosud.Components"
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="60">
    <Button Style="{StaticResource ButtonAddStyle}" 
        ToolTip="Ajouter"
        Command="{Binding Command, RelativeSource={RelativeSource AncestorType=local:ButtonAdd}}" 
        CommandParameter="{Binding CommandParameter, RelativeSource={RelativeSource AncestorType=local:ButtonAdd}}" />

</UserControl>
