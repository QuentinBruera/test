<UserControl x:Class="Negosud.Components.ButtonValidateLong"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Negosud.Components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border Background="{StaticResource ValidateColor}"
            CornerRadius="10"
            Width="300"
            Height="50"
            Cursor="Hand"
            MouseLeftButtonUp="OnMouseLeftButtonUp">
        <TextBlock Text="Enregistrer"
                   Foreground="{StaticResource PrimaryItemColor}"
                   FontSize="30"
                   FontWeight="SemiBold"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Margin="0,-3,0,0"/>
    </Border>
</UserControl>
