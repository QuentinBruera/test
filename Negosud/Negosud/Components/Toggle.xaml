<UserControl x:Class="Negosud.Components.Toggle"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Negosud.Components"
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="100">
    <Grid>
        <ToggleButton Style="{StaticResource ToggleStyle}"
                      ToolTip="{Binding ToolTip, RelativeSource={RelativeSource AncestorType=local:Toggle}}"
                      IsChecked="{Binding IsChecked, RelativeSource={RelativeSource AncestorType=local:Toggle}}" />
    </Grid>
</UserControl>
